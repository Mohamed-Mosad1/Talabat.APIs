@model ProductViewModel

@inject IUnitOfWork unitOfWork
@{
    var Brands = new SelectList(await unitOfWork.Repository<ProductBrand>().GetAllAsync(), "Id", "Name");
    var Categories = new SelectList(await unitOfWork.Repository<ProductCategory>().GetAllAsync(), "Id", "Name");
}
<div class="form-group">
    <label asp-for="Image" class="col-form-label "></label>
    <input asp-for="Image" class="form-control" />
</div>


<div class="form-group">
    <label asp-for="Name" class="col-form-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="col-form-label"></label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Price" class="col-form-label"></label>
    <input asp-for="Price" class="form-control" type="number" />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Brand" class="col-form-label"></label>
    <select class="form-control" asp-for="BrandId" asp-items="Brands">
        <option value="@null">-- Select Brand --</option>
    </select>
</div>
<div class="form-group">
    <label asp-for="Category" class="col-form-label"></label>
    <select class="form-control" asp-for="CategoryId" asp-items="Categories">
        <option value="@null">-- Select Type --</option>
    </select>
</div>
