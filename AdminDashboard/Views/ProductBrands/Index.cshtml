@model IReadOnlyList<ProductBrand>

@{
    ViewData["Title"] = "Index";
}

<h1 class="my-4 ms-3">All Brands</h1>

<partial name="~/Views/ProductBrands/Partial/CreateFormPartialView.cshtml" model="new ProductBrand()" />

@if (Model.Count() > 0)
{
	<div class="container">
		<table class="table table-hover table-striped table-bordered dt-responsive nowrap">
			<thead class="bg-dark text-white text-center">
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody class="text-center">
				@foreach (var productBrand in Model)
				{
					<tr>
						<td>@productBrand.Id</td>
						<td>@productBrand.Name</td>
						<td>
							<div class="d-flex justify-content-center">
								<a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@productBrand.Id"><i class="fas fa-trash"></i></a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>

}
else
{
	<div class="mt-3 p-3 alert-warning">
		<h2>There is no Brands!</h2>
	</div>
}
@section Scripts
{
	<partial name="_ValidationScriptsPartial" />
}

