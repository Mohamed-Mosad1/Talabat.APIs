@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Index";
}

<section class="container p-4">

<h1>All Roles</h1>
<br />

<partial name="~/Views/Roles/Partial/RoleFormPartialView.cshtml" model="new RoleFormViewModel()" />

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(R => R.Id)</th>
                <th>@Html.DisplayNameFor(R => R.Name)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td class="text-center">
                        <a class="btn btn-outline-warning m-2" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There Is No Records ):</h2>
    </div>
}

</section>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

