@model UserRoleViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.UserName</h1>
<hr />

<div class="container">
    <form method="post" asp-action="Edit">
        <input asp-for="UserId" class="form-control" hidden />

        <div>
            <label asp-for="UserName" class="col-form-label"></label>
            <input asp-for="UserName" class="form-control" disabled />
        </div>
        <h3>Manage User Roles</h3>
        <hr />
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <div class="">
                <input asp-for="@Model.Roles[i].Name" hidden />
                <input asp-for="@Model.Roles[i].IsSelected" class="form-check-label" />
                <label asp-for="@Model.Roles[i]" class="form-check-label">@Model.Roles[i].Name</label>
                <span asp-validation-for="Roles"></span>
            </div>
        }
        <br />

        <input type="submit" class="btn btn-primary" value="Save" />
        <a asp-action="Index" class="btn btn-secondary">Back To List</a>

    </form>
</div>
